<div class="index-view">

  <!-- Index title -->
  <div class="top-text">
    <h1 id="app-heading"><span style="color: #D5C4FB">COCKTAIL</span> LIBRARY</h1>
  </div>

  <!-- Slideshow container -->
  <div class="slideshow-container">
    <div id="slideshow-background">
      <div id="slideshow-img-position">
        <% @cocktails.each do |cocktail| %>
          <div class="mySlides fade">
            <%= cocktail.photo.attached? ? cl_image_tag(cocktail.photo.key) : "No image available" %>
            <div class="text"><h3><%= link_to cocktail.name.upcase, cocktail_path(cocktail) %></h3></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <br>

  <div style="text-align:center">
    <% @cocktails.each_with_index do |cocktail, index| %>
      <span class="dot" onclick="currentSlide(<%= index + 1 %>)"></span>
    <% end %>
  </div>


  <div id="cocktail-index">
    <div class="index-head">
      <h2>ALL COCKTAILS </h2>
      <div class="add-btn">
        <%= link_to '+', 'cocktails/new' %>
      </div>
    </div>

    <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <div class="cocktail-card">
          <div class="card-left" style="background-image: url('<%= cocktail.photo.attached? ? cl_image_path(cocktail.photo.key) : "No image available" %>')">


          <%= link_to '', cocktail_path(cocktail), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "fa-solid fa-xmark delete-icon" %>
          </div>

          <div class="card-right">
            <h3><%= link_to cocktail.name.upcase, cocktail_path(cocktail), style: "text-decoration:none;" %></h3>
            <p class="text-start"><%= cocktail.cocktaildescription[0..200] %>... <%= link_to 'more',cocktail_path(cocktail), style: "color: #D5C4FB;" %> </p>

          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
