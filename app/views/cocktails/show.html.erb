<div class="show-view ">

  <div class="top-text">
    <h1><%= @cocktail.name.upcase %></h1>
  </div>

  <div class="d-flex justify-content-center">

    <div class="left-side">
      <%= cl_image_tag @cocktail.photo.key %>
    </div>

    <div class="right-side">
      <div class="text-title">
        <% if @cocktail.name.start_with?('A' || 'a') %>
          <h4>What is an <%= @cocktail.name %>?</h4>
        <% else %>
          <h4>What is a <%= @cocktail.name %>?</h4>
        <% end %>
      </div>
      <div id="description">
        <p><%= @cocktail.cocktaildescription %></p>
      </div>

      <div class="text-title d-flex justify-content-between">
        <h4>Ingredients</h4>
        <%= link_to '', new_cocktail_dose_path(@cocktail), class: "fa-solid fa-plus" %>
      </div>
      <% @cocktail.doses.each do |dose| %>
        <p><%= dose.ingredient.name %>: <%= dose.description %></p>
      <% end %>
    </div>
  </div>
</div>
